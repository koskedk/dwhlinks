@using DWHDashboard.ProfileManagement.Core.Model
@using DWHDashboard.Web.Helpers
<div class="row border-bottom">
    <nav class="navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0; height: 100px">
        <div class="row">
            <div class="col-md-10"><img src="~/Images/org/partners2.png" class="img-responsive center-block" style="padding: 8px 1px 5px 4px;"></div>
            <div class="col-md-2">
                <div class="logout">
                    <div class="logouttext">
                        <div class="@Html.ShowAreaIf(true, UserType.Admin, UserType.Steward, UserType.Normal, UserType.None, UserType.GisAdmin)">
                            <a href="@Url.Action("LogOut", "Account")">
                                <i class="fa fa-sign-out"></i> <strong>Log out</strong>
                            </a>
                        </div>
                        <div class="@Html.ShowAreaIf(false, UserType.Guest)">
                            <a href="@Url.Action("Login", "Account")">
                                <i class="fa fa-sign-out"></i> <strong>Login</strong>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>
</div>